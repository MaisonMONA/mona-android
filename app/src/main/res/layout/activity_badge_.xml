<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Badge_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/oeuvreCount"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:gravity="top|right"
            android:text="0"
            android:textSize="90sp"
            app:fontFamily="sans-serif-condensed"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="192dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="40dp"
            android:gravity="left|center_vertical"
            android:text="oeuvres\ncollectionnÃ©es"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="37dp" />

        <ScrollView
            android:id="@+id/scrollviewbadge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/oeuvreCount"
            android:fadeScrollbars="false"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/Yellow"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="288dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fadingEdge="vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:requiresFadingEdge="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sculpturenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:text="0"
                            android:textColor="@color/Yellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="sculptures" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/installationnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:text="0"
                            android:textColor="@color/Yellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="installations" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/muralnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:text="0"
                            android:textColor="@color/Yellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="murales" />
                    </LinearLayout>
                </LinearLayout>

                <com.example.dajc.tabs.ExpandableHeightGridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comsp"
                    android:gravity="top|center"
                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>