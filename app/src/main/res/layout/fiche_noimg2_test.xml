<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/powder_blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OEUVRE DU JOUR"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/gill_sans"
        android:textColor="@color/white"></TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/odj_white" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nom_oeuvre"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="27dp"
        android:paddingVertical="20dp"
        android:fontFamily="@font/gill_sans"/>

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/artiste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="nom_artiste"
        android:paddingVertical="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/gill_sans"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date_oeuvre"
        android:textColor="@color/white"
        android:fontFamily="@font/gill_sans"
        android:gravity="center"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description_oeuvre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/gill_sans"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_cam"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera"
            android:foregroundGravity="right"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/button_map"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/map"
            android:foregroundGravity="left"
            android:paddingVertical="20dp" />

    </LinearLayout>


    <!--
    <org.osmdroid.views.MapView
        android:id="@+id/map"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:contentDescription="" />
        -->


</LinearLayout>
